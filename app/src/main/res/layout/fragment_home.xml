<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment"
    android:background="@color/light_gray"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_green_cornors"
        android:layout_marginTop="@dimen/_150sdp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@id/iv_bulb"
            android:layout_marginTop="@dimen/_60sdp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="Excercise"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/rec_cornor_5"
                android:paddingHorizontal="@dimen/_25sdp"
                android:paddingVertical="@dimen/_10sdp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/iv_bulb"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Congratulation! you have a\n new ticket"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/iv_bulb"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="2019-07-03    10:30 AM"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_ticket"
                android:scaleType="centerInside"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/rec_cornor_5"
                android:paddingHorizontal="@dimen/_25sdp"
                android:paddingVertical="@dimen/_10sdp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/iv_bulb"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Congratulation! you have a\n new ticket"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/iv_bulb"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="2019-07-03    10:30 AM"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_ticket"
                android:scaleType="centerInside"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@id/iv_bulb"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/white"
            android:text="News"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:background="@color/white"
            android:id="@+id/rvNews"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGotoboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/go_to_board"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@drawable/button_bg"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_30sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_margin="@dimen/_15sdp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rec_cornor_15"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_edits"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_edits"
                android:padding="@dimen/_2sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_galary"
                android:layout_toLeftOf="@id/iv_edits"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                />
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_logo"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
            <ImageView
                android:id="@+id/iv_bulb"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_blue_bulb"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                />

            <TextView
                android:id="@+id/tvFoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@id/iv_bulb"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Green Footprint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_below="@id/tvFoot"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/iv_bulb"
                android:text="0.76"/>
            </RelativeLayout>
            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/dark_gray"
                android:layout_centerHorizontal="true"
                />
<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight=".5"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
            <ImageView
                android:id="@+id/iv_cart"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_cart"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_toLeftOf="@id/tvSwaps"
                />

            <TextView
                android:id="@+id/tvSwaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Swaps"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_below="@id/tvSwaps"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/iv_cart"
                android:text="0.76"/>
</RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</layout>