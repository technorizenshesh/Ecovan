<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.TermsConditionWeb">

        <ir.alirezabdn.wp7progress.WP10ProgressBar
            android:id="@+id/loader_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:indicatorHeight="7"
            app:indicatorRadius="5"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_13sdp">

              <ImageView
                android:id="@+id/img_header"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:padding="@dimen/_2sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back" />


               <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_toRightOf="@id/img_header"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Terms And Condition's "
                android:textColor="@color/green"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

        </RelativeLayout>

         <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool_bar"></WebView>

    </RelativeLayout>

</layout>